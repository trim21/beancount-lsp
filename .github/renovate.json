{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>trim21/renovate-config",
    "github>trim21/renovate-config:python",
    "github>trim21/renovate-config:monthly",
    "github>trim21/renovate-config:rust"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": [
        "requires-python"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "beancount"
      ],
      "matchManagers": [
        "pep621"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "@types/node",
        "microsoft/vscode",
        "@types/vscode"
      ],
      "enabled": false
    }
  ]
}
